@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "ГЕНЕРУЙТЕ КОДИ ВІДНОВЛЕННЯ ДВОФАКТОРНОЇ АВТЕНТИФІКАЦІЇ (2FA).";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.ico">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Play:400,700" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <!-- modernizr JS -->
    <script src="js/vendor/modernizr-2.8.3.min.js"></script>
</head>

<body>
    <div class="error-pagewrap">
        <div class="error-page-int">
            <div class="text-center custom-login">
                <h3 class="mb-3">@ViewData["Title"]</h3>
                <partial name="_StatusMessage" for="StatusMessage" />
            </div>
            <div class="content-error">
                <div class="hpanel">
                    <div class="panel-body">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-12">
                                <div class="alert alert-warning" role="alert">
                                    <p class="mb-3">
                                        <span class="glyphicon glyphicon-warning-sign"></span>
                                        <strong class="mb-3">Покладіть ці коди в безпечне місце.</strong>
                                    </p>
                                    <p class="mb-3">
                                        Якщо ви втратите пристрій і не матимете кодів відновлення, ви втратите доступ до свого облікового запису.
                                    </p>
                                    <p class="mb-3">
                                        Створення нових кодів відновлення не змінює ключі, які використовуються в програмах автентифікації. Якщо ви хочете змінити ключ
                                        використовується в програмі автентифікатора, яку ви повинні використовувати <a asp-page="./ResetAuthenticator">скиньте ключі автентифікатора.</a>
                                    </p>
                                </div>
                                <div>
                                    <form method="post">
                                        <button class="btn btn-danger mb-3" type="submit">Створення кодів відновлення</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- jquery -->
    <script src="js/vendor/jquery-1.12.4.min.js"></script>
    <!-- bootstrap JS -->
    <script src="js/bootstrap.min.js"></script>
    <!-- main JS -->
    <script src="js/main.js"></script>
</body>