@model BCS.Core.Entities.Structure

@{
    ViewData["Title"] = "Додати нову структуру";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h1 class="text-center mb-4">@ViewData["Title"]</h1>

                <form asp-action="Create">
                    <div class="mb-3">
                        <label for="title" class="form-label">Назва</label>
                        <input asp-for="Title" class="form-control" id="title" placeholder="Введіть нову структуру">
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">Додати</button>
                        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
