@using BCS.Core.Entities
@using Microsoft.AspNetCore.Identity
@model IEnumerable<BCS.Core.Entities.ComplaintComments>

@{
    ViewData["Title"] = "Коментарі";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@inject UserManager<AppUser> UserManager

@{
    string currentUserId = UserManager.GetUserId(User);
}

<div class="container">
    <div class="row justify-content-center mt-3">
        <div class="col-md-10">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h1 class="text-start mb-0">@ViewData["Title"]</h1>
                    </div>
                    <div class="col-md-6 text-end">
                        <a href="/complaintComments/create" class="btn btn-outline-primary mb-0">Додати новий коментар</a>
                    </div>
                </div>
                <hr />

                <div class="row">
                    @if (Model != null)
                    {
                        @foreach (var complaintComments in Model)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card">
                                    <div class="card-header ComColorHead">
                                        <div class="row">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <p class="m-0"><strong>@complaintComments.User.FullName</strong></p>
                                                </div>
                                                <div>
                                                    <p class="m-0">@complaintComments.ComCommentData</p>
                                                </div>
                                                @if (User.IsInRole("Admin") || (complaintComments.UserId.ToString() == currentUserId))
                                                {
                                                    <button type="button" class="btn p-0" data-bs-toggle="modal" data-bs-target="#deleteModal-@complaintComments.Id">
                                                        <small><i class="bi bi-trash3 icons_delete"></i></small>
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <p>@complaintComments.Text</p>

                                        @if (!string.IsNullOrEmpty(complaintComments.ComCommentPhoto))
                                        {
                                            <div class="mt-3">
                                                <h6 class="mb-2 text-center">Фото</h6>
                                                <img src="@complaintComments.ComCommentPhoto" alt="Complaint Photo" class="img-thumbnail" />
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@foreach (var complaintComments in Model)
{
    <div class="modal fade" id="deleteModal-@complaintComments.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Видалення коментаря</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Ви впевнені, що хочете видалити цей коментар?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cкасувати</button>
                    <form asp-action="Delete" asp-route-id="@complaintComments.Id" method="post">
                        <button type="submit" class="btn btn-outline-danger">Видалити</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}