@model BCS.Core.Entities.Complaint
@{
    ViewData["Title"] = "Редагувати скаргу";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var types = ViewBag.Types as List<BCS.Core.Entities.Type>;
    var cities = ViewBag.Cities as List<BCS.Core.Entities.City>;
    var streets = ViewBag.Streets as List<BCS.Core.Entities.Street>;
    var statuses = ViewBag.Statuses as List<BCS.Core.Entities.Status>;
}


<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" asp-controller="Complaint" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Sdatetime" value="@Model.Sdatetime.ToUniversalTime()" />

                        <h1 class="text-center mb-3">@ViewData["Title"]</h1>

                        <div class="form-group">
                            <label asp-for="TypeId" class="control-label">Тип</label>
                            <select asp-for="TypeId" class="form-control">
                                @foreach (var type in types)
                                {
                                    var isSelected = Model.TypeId == type.Id ? "selected" : "";
                                    <option value="@type.Id" selected="@isSelected">@type.Title</option>
                                }
                            </select>
                            <span asp-validation-for="TypeId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Text" class="control-label">Опис</label>
                            <textarea asp-for="Text" class="form-control">@Model.Text</textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="StatusId" class="control-label">Статус</label>
                            <select asp-for="StatusId" class="form-control">
                                @foreach (var status in statuses)
                                {
                                    var isSelected = Model.StatusId == status.Id ? "selected" : "";
                                    <option value="@status.Id" selected="@isSelected">@status.Title</option>
                                }
                            </select>
                            <span asp-validation-for="StatusId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CityId" class="control-label">Місто</label>
                            <select asp-for="CityId" class="form-control">
                                @foreach (var city in cities)
                                {
                                    var isSelected = Model.CityId == city.Id ? "selected" : "";
                                    <option value="@city.Id" selected="@isSelected">@city.Title</option>
                                }
                            </select>
                            <span asp-validation-for="CityId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="StreetId" class="control-label">Вулиця</label>
                            <select asp-for="StreetId" class="form-control">
                                @foreach (var street in streets)
                                {
                                    var isSelected = Model.StreetId == street.Id ? "selected" : "";
                                    <option value="@street.Id" selected="@isSelected">@street.Title</option>
                                }
                            </select>
                            <span asp-validation-for="StreetId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Number" class="control-label">Номер будинку</label>
                            <input asp-for="Number" class="form-control">@Model.Number</input>
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Photo" class="control-label">Фото</label>
                            <input asp-for="Photo" type="file" class="form-control" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Редагувати" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
