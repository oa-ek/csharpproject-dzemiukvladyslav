@page "/structure/create"
@using BCS.Infrastructure.Dtos
@using BCS.Infrastructure.Interface
@using BCS.WebAssembly.Services
@inject NavigationManager NavigationManager
@inject IStructure Structure
@inject IStructure StructureService

<PageTitle>Створити нову структуру</PageTitle>
<EditForm Model="structure" class="form-group" OnSubmit="HandleSubmit">
    <div class="container">
        <div class="row justify-content-center mt-3">
            <div class="col-md-10">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h1 class="text-start mb-0">Створити нову структуру</h1>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <button @onclick="Cancel" class="btn btn-outline-secondary mb-0">Скасувати</button>
                    </div>
                </div>
                <hr />

                <div class="form-group mb-3">
                    <label>Назва</label>
                    <div>
                        <InputText class="form-control" @bind-Value="structure.Title" id="StructureInput" placeholder="Назва структури" />
                    </div>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline-primary">Створити</button>
                </div>
            </div>
        </div>
    </div>
</EditForm>


@code {
    public StructureCreateDto structure = new StructureCreateDto();

    private async Task HandleSubmit()
    {
        await StructureService.CreateStructure(structure);
        NavigationManager.NavigateTo("/structure/index");
    }

    public void Cancel()
    {
        NavigationManager.NavigateTo($"/structure/index");
    }

}
