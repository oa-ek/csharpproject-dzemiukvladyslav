@model IEnumerable<BCS.Core.Entities.Structure>

@{
    ViewData["Title"] = "Міські структури";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center mt-3">
        <div class="col-md-10">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h1 class="text-start mb-0">@ViewData["Title"]</h1>
                    </div>
                    <div class="col-md-6 text-end">
                        <a href="/structure/create" class="btn btn-outline-primary mb-0">Додати нову структуру</a>

                    </div>
                </div>
                <hr />

                <div class="row">
                    <div class="list-group">
                        @foreach (var c in Model)
                        {
                            <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                @c.Title
                                <div>
                                    <a href="/structure/update/@c.Id" class="btn" role="button">
                                        <i class="bi bi-pencil-square icons_edit"></i>
                                    </a>
                                    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#deleteModal-@c.Id">
                                        <i class="bi bi-trash3 icons_delete"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@foreach (var c in Model)
{
    <div class="modal fade" id="deleteModal-@c.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Видалення міської структури</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Ви впевнені, що хочете видалити цю структуру?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cкасувати</button>
                    <form asp-action="Delete" asp-route-id="@c.Id" method="post">
                        <button type="submit" class="btn btn-outline-danger">Видалити</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}