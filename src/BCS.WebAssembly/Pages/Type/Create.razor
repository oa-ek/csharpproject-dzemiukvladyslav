@page "/type/create"
@using BCS.Infrastructure.Dtos
@using BCS.Infrastructure.Interface
@using BCS.WebAssembly.Services
@inject NavigationManager NavigationManager
@inject IType Type
@inject IType TypeService

<PageTitle>Створити новий тип</PageTitle>
<EditForm Model="type" class="form-group" OnSubmit="HandleSubmit">
    <div class="container">
        <div class="row justify-content-center mt-3">
            <div class="col-md-10">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h1 class="text-start mb-0">Створити новий тип</h1>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <button @onclick="Cancel" class="btn btn-outline-secondary mb-0">Скасувати</button>
                    </div>
                </div>
                <hr />

                <div class="form-group mb-3">
                    <label>Назва</label>
                    <div>
                        <InputText class="form-control" @bind-Value="type.Title" id="TypeInput" placeholder="Назва типу" />
                    </div>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline-primary">Створити</button>
                </div>
            </div>
        </div>
    </div>
</EditForm>


@code {
    public TypeCreateDto type = new TypeCreateDto();

    private async Task HandleSubmit()
    {
        await TypeService.CreateType(type);
        NavigationManager.NavigateTo("/type/index");
    }

    public void Cancel()
    {
        NavigationManager.NavigateTo($"/type/index");
    }

}
