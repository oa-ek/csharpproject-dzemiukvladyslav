@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "ВИДАЛИТИ ОСОБИСТІ ДАНІ";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.ico">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Play:400,700" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <!-- modernizr JS -->
    <script src="js/vendor/modernizr-2.8.3.min.js"></script>
</head>

<body>
    <div class="error-pagewrap">
        <div class="error-page-int">
            <div class="text-center custom-login">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="content-error">
                <div class="hpanel">
                    <div class="panel-body">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-12">
                                <div class="alert alert-warning" role="alert">
                                    <p class="mb-3">
                                        <strong>Видалення цих даних призведе до остаточного видалення вашого облікового запису, і його неможливо відновити.</strong>
                                    </p>
                                </div>

                                <div class="mb-3">
                                    <form id="delete-user" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                        @if (Model.RequirePassword)
                                        {
                                            <label>Пароль</label>
                                            <div class="form-group mb-4">
                                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Введіть будь ласка ваш пароль" />
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                        }
                                        <div class="form-group text-center mb-4">
                                            <button class="btn btn-danger" type="submit">Видалити дані та закрити мій обліковий запис</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- jquery -->
    <script src="js/vendor/jquery-1.12.4.min.js"></script>
    <!-- bootstrap JS -->
    <script src="js/bootstrap.min.js"></script>
    <!-- main JS -->
    <script src="js/main.js"></script>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
