@model IEnumerable<BCS.Core.Entities.SuggestionComments>

@{
    ViewData["Title"] = "Коментарі";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center mt-3">
        <div class="col-md-10">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h1 class="text-start mb-0">@ViewData["Title"]</h1>
                    </div>
                    <div class="col-md-6 text-end">
                        <a href="/suggestionComments/create" class="btn btn-outline-primary mb-0">Додати новий коментар</a>
                    </div>
                </div>
                <hr />

                <div class="row">
                    @if (Model != null)
                    {
                        @foreach (var suggestionComments in Model)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card">
                                    <div class="card-header bg- ComColorHead">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <p><strong>@suggestionComments.User.FullName</strong></p>
                                            </div>
                                            <div class="col-md-6 text-right">
                                                <small>@suggestionComments.SugCommentData</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <p>@suggestionComments.Text</p>

                                        @if (!string.IsNullOrEmpty(suggestionComments.SugCommentPhoto))
                                        {
                                            <div class="mt-3">
                                                <h6 class="mb-2 text-center">Фото</h6>
                                                <img src="@suggestionComments.SugCommentPhoto" alt="Suggestion Photo" class="img-thumbnail" />
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
