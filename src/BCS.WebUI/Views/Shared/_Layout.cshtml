<!DOCTYPE html>
<html lang="ua">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]-BCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BCS.WebUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />

</head>
<body class="d-flex flex-column">
    <div class="wrapper h-vh-100">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
                <div class="container-fluid h-100">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                        <span class="fs-4"><i class="bi bi-book-half"></i> BCS</span>
                    </a
                    <div class="ms-auto">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
    </div>

    <div class="wrapper d-flex flex-column min-vh-100">
        <div class="container-fluid">
            <main role="main">
                <div class="row py-0 min-vh-100">
                    <div class="col-md-2 px-0 d-md-block collapse" id="sidebarMenu">
                        <div class="d-flex flex-column flex-shrink-0 p-0 bg-white h_sidemenu">
                            <ul class="nav nav-pills flex-column mb-auto" id="accordion">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Дім</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Complaint" asp-action="Index">Скарги</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Suggestion" asp-action="Index">Пропозиції</a>
                                </li>
                                @if (User.IsInRole("Admin") || User.IsInRole("Worker") || User.IsInRole("User"))
                                {
                                    <li class="nav-item">
                                        <button class="nav-link text-dark accordion-button pad_acord" data-bs-toggle="collapse" data-bs-target="#collapseOne" data-bs-parent="#accordion">
                                            Мої звернення
                                        </button>
                                        <div id="collapseOne" class="collapse show">
                                            <ul class="nav flex-column">
                                                <li class="nav-item">
                                                    <a class="nav-link text-black" asp-area="" asp-controller="Complaint" asp-action="MyIndex">Мої скарги</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link text-black" asp-area="" asp-controller="Suggestion" asp-action="MyIndex">Мої пропозиції</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </li>
                                }

                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Користувачі</a>
                                    </li>
                                    <li class="nav-item">
                                        <button class="nav-link text-dark accordion-button pad_acord" data-bs-toggle="collapse" data-bs-target="#collapseTwo" data-bs-parent="#accordion">
                                            Додатково
                                        </button>
                                        <div id="collapseTwo" class="collapse show">
                                            <ul class="nav flex-column">
                                                <li class="nav-item">
                                                    <a class="nav-link text-black" asp-area="" asp-controller="Type" asp-action="Index">Типи</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link text-black" asp-area="" asp-controller="Status" asp-action="Index">Статуси</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link text-black" asp-area="" asp-controller="Structure" asp-action="Index">Міські структури</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link text-black" asp-area="" asp-controller="City" asp-action="Index">Міста</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link text-black" asp-area="" asp-controller="Street" asp-action="Index">Вулиці</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Конфіденційність</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-10 content">
                        @RenderBody()
                    </div>
                </div>
            </main>
        </div>
    </div>
    <footer class="bg-white p-3 d-flex text-muted mt-auto">
        <div class="container text-center">
            <i class="bi bi-book-half"></i> © 2024 Company
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.7.1/dist/leaflet.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
