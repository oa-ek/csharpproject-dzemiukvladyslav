@page
@model ResetAuthenticatorModel
@{
    ViewData["Title"] = "СКИНУТИ КЛЮЧ АВТЕНТИФІКАТОРА";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.ico">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Play:400,700" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <!-- modernizr JS -->
    <script src="js/vendor/modernizr-2.8.3.min.js"></script>
</head>

<body>
    <div class="error-pagewrap">
        <div class="error-page-int">
            <div class="text-center custom-login">
                <h3 class="mb-3">@ViewData["Title"]</h3>
                <partial name="_StatusMessage" for="StatusMessage" />
            </div>
            <div class="content-error">
                <div class="hpanel">
                    <div class="panel-body">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-12">
                                <div class="alert alert-warning" role="alert">
                                    <p class="mb-3">
                                        <span class="glyphicon glyphicon-warning-sign"></span>
                                        <strong>Якщо ви скинете ключ автентифікатора, програма автентифікатора не працюватиме, доки ви не налаштуєте її повторно.</strong>
                                    </p>
                                    <p class="mb-3">
                                        Цей процес вимикає 2FA, доки ви не перевірите свою програму автентифікації.
                                        Якщо ви не завершите налаштування програми автентифікації, ви можете втратити доступ до свого облікового запису.
                                    </p>
                                </div>
                                <div>
                                    <form id="reset-authenticator-form" method="post">
                                        <button id="reset-authenticator-button" class="btn btn-danger" type="submit">Скинути ключ автентифікатора</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- jquery -->
    <script src="js/vendor/jquery-1.12.4.min.js"></script>
    <!-- bootstrap JS -->
    <script src="js/bootstrap.min.js"></script>
    <!-- main JS -->
    <script src="js/main.js"></script>
</body>