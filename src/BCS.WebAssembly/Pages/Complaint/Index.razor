@page "/complaint/index"
@using BCS.Infrastructure.Dtos
@using BCS.Infrastructure.Interface
@using BCS.WebAssembly.Services
@inject IComplaint ComplaintService
@inject NavigationManager NavigationManager

<PageTitle>Скарги</PageTitle>

<div class="container">
    <div class="row justify-content-center mt-3">
        <div class="col-md-10">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h1 class="text-start mb-0">Скарги</h1>
                    </div>
                    <div class="col-md-6 text-end">
                        <button class="btn btn-outline-primary mb-0" @onclick="CreatePage" type="submit">Додати нову скаргу</button>
                    </div>
                </div>
                <hr />

                <div class="row">
                    @foreach (var complaint in complaints)
                    {
                        <div class="col-md-12 mb-4">
                            <div class="card">
                                <div class="card-header ComColorHead">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div><strong>@complaint.UserName</strong></div>
                                        <div>@complaint.Sdatetime</div>
                                    </div>
                                </div>
                                <div class="card-body pt-1 pb-1">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <strong>Структура:</strong> @complaint.Structure.Title
                                        <strong>Тип:</strong> @complaint.Type.Title
                                        <strong>Статус:</strong> @complaint.Status.Title
                                    </div>
                                    <div class="mb-1">
                                        <strong>Адреса:</strong>
                                        <span>@complaint.City.Title</span>,
                                        <span>@complaint.Street.Title</span>,
                                        <span>@complaint.Number</span>
                                    </div>

                                    <div class="mb-1 text-center">
                                        <strong>Опис:</strong>
                                    </div>
                                    <div class="mb-1">
                                        <span>@complaint.Text</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(complaint.Photo))
                                    {
                                        <div class="mb-1 text-center">
                                            <strong>Фото:</strong>
                                        </div>
                                        <div class="mb-1 text-center">
                                            <img src="@complaint.Photo" class="card-img-bottom rounded sizeMedia" alt="Complaint Photo" onclick="openModal('viewImageModal-@complaint.Id')">
                                        </div>
                                    }
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <button type="button" role="button" class="btn btn-outline-warning" @onclick="()=> EditComplaint(complaint.Id)">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
                                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"></path>
                                            </svg>
                                            Редагувати
                                        </button>
                                        <button type="button" role="button" class="btn btn-outline-danger" @onclick="()=> DeleteComplaint(complaint.Id)">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"></path>
                                            </svg>
                                            Видалити
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ComplaintUpdateDto> complaints = new List<ComplaintUpdateDto>();

    protected override async Task OnInitializedAsync()
    {
        complaints = await ComplaintService.GetComplaints();
    }

    private void CreatePage()
    {
        NavigationManager.NavigateTo("/complaint/create");
    }

    private void EditComplaint(Guid complaintId)
    {
        NavigationManager.NavigateTo($"/complaint/edit/{complaintId}");
    }

    private void DeleteComplaint(Guid complaintId)
    {
        NavigationManager.NavigateTo($"/complaint/delete/{complaintId}");
    }
}
